@model CustomerRegistration.Models.Customer

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h1>Detalhes do Cliente</h1>

<p><strong>Nome:</strong> @Model.Name</p>
<p><strong>Email:</strong> @Model.Email</p>

<p><strong>Logo:</strong></p>
@if (Model.Logo != null && Model.Logo.Length > 0)
{
    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Logo)" alt="Logo" style="max-width: 100px; max-height: 100px;" />
}
else
{
    <span>Sem logo</span>
}

<p><strong>Endereços:</strong></p>
@if (Model.Addresses != null && Model.Addresses.Any())
{
    <ul>
        @foreach (var address in Model.Addresses)
        {
            <li>@address.Name - @address.Type - @address.City - @address.State - @address.Cep</li>
        }
    </ul>
}
else
{
    <span>Sem endereços cadastrados</span>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="List" class="btn btn-secondary">Voltar</a>
