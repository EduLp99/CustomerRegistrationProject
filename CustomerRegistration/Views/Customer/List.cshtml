@model IEnumerable<CustomerRegistration.Models.Customer>

@{
    ViewData["Title"] = "List";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Logo)</th>
            <th>Endereços</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @if (item.Logo != null && item.Logo.Length > 0)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Logo)" alt="Logo" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>Sem logo</span>
                    }
                </td>
                <td>
                    @if (item.Addresses != null && item.Addresses.Any())
                    {
                        <ul>
                            @foreach (var address in item.Addresses)
                            {
                                <li>@address.Name - @address.Type - @address.City - @address.State - @address.Cep</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>Sem endereços cadastrados</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
