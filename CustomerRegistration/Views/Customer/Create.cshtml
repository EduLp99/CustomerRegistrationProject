@model CustomerRegistration.Models.Customer

@{
    ViewData["Title"] = "Criar Novo Cliente";
}

<h1>Criar Novo Cliente</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div>
        <label>Nome</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <label>Logo</label>
        <input type="file" id="logoUpload" name="logoFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
        <span asp-validation-for="Logo" class="text-danger"></span>
        <br />
        <img id="logoPreview" src="#" alt="Pré-visualização da Logo" style="display:none; max-width: 200px;" />
    </div>

    <h3>Endereços</h3>
    <div id="address-container">
        <div class="address">
            <div>
                <label>Nome do Endereço</label>
                <input asp-for="Addresses[0].Name" class="form-control" />
                <span asp-validation-for="Addresses[0].Name" class="text-danger"></span>
            </div>
            <div>
                <label>Tipo</label>
                <input asp-for="Addresses[0].Type" class="form-control" />
                <span asp-validation-for="Addresses[0].Type" class="text-danger"></span>
            </div>
            <div>
                <label>Cidade</label>
                <input asp-for="Addresses[0].City" class="form-control" />
                <span asp-validation-for="Addresses[0].City" class="text-danger"></span>
            </div>
            <div>
                <label>Estado</label>
                <input asp-for="Addresses[0].State" class="form-control" />
                <span asp-validation-for="Addresses[0].State" class="text-danger"></span>
            </div>
            <div>
                <label>Cep</label>
                <input asp-for="Addresses[0].Cep" class="form-control" />
                <span asp-validation-for="Addresses[0].Cep" class="text-danger"></span>
            </div>
        </div>
    </div>

    <button type="button" id="add-address" class="btn btn-secondary">Adicionar Novo Endereço</button>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <script>
        let addressIndex = 1;

        document.getElementById('add-address').addEventListener('click', function () {
            let container = document.getElementById('address-container');
            let newAddress = document.createElement('div');
            newAddress.classList.add('address');

            newAddress.innerHTML = `
                        <div>
                            <label>Nome do Endereço</label>
                            <input name="Addresses[${addressIndex}].Name" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div>
                            <label>Tipo</label>
                            <input name="Addresses[${addressIndex}].Type" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div>
                            <label>Cidade</label>
                            <input name="Addresses[${addressIndex}].City" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div>
                            <label>Estado</label>
                            <input name="Addresses[${addressIndex}].State" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div>
                            <label>Cep</label>
                            <input name="Addresses[${addressIndex}].Cep" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                    `;

            container.appendChild(newAddress);
            addressIndex++;
        });

        function previewImage(event) {
            var output = document.getElementById('logoPreview');
            output.style.display = 'block';
            output.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
