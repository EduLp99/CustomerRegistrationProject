@model CustomerRegistration.Models.Address

@{
    ViewData["Title"] = "Excluir Endereço";
}

<h1>Excluir Endereço</h1>

<p>Tem certeza que deseja excluir o seguinte endereço?</p>

<p><strong>Nome:</strong> @Model.Name</p>
<p><strong>Tipo:</strong> @Model.Type</p>
<p><strong>Cidade:</strong> @Model.City</p>
<p><strong>Estado:</strong> @Model.State</p>
<p><strong>CEP:</strong> @Model.Cep</p>
<p>
    <strong>Cliente:</strong>
    @if (Model.Customer != null)
    {
        @Model.Customer.Name
    }
    else
    {
        <span>Sem cliente associado</span>
    }
</p>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>
